           targetNamespace="http://urn:ec:ejustice:publicdocuments/pdc"
		   xmlns="http://urn:ec:ejustice:publicdocuments/pdc"
				   xmlns:cvb ="http://www.w3.org/ns/corevocabulary/BasicComponents"
				   xmlns:cva ="http://www.w3.org/ns/corevocabulary/AggregateComponents"	
				   				xmlns:forms ="http://urn:ec:ejustice:publicdocuments/forms"
				   xmlns:udt ="urn:oasis:names:specification:ubl:schema:xsd:UnqualifiedDataTypes-2"
						xmlns:cec ="urn:oasis:names:specification:ubl:schema:xsd:CommonExtensionComponents-2"
>
